<h1>Listing users</h1>

<table>
  <tr>
    <th>First Name</th>
    <th>Last Name</th>
    <th>Email Address</th>
    <th>Postal Address</th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= user.fname %></td>
    <td><%= user.lname %></td>
    <td><%= user.email %></td>
    <td><%= user.postal %></td>
    <td><%= link_to 'Show Profile', user %></td>
    <td><%= link_to 'Edit Profile',  edit_user_registration_path %></td>
    <td><%= link_to 'Delete User', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<% if current_user.present? %>
  <li><%= link_to 'Sign Out', destroy_user_session_path, method: :delete, data: { confirm: 'Are you sure to sign out?' }  %></li>
  <% else %>
  <li><%= link_to 'Sign In', new_user_session_path %></li>
  <li><%= link_to "Sign up", new_user_registration_path %></li>
<% end %>
